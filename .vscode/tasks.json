{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "options": {
    "env": {
      // resolv for WSL grep nameserver /etc/resolv.conf | sed 's/nameserver //'
      "DISPLAY": "172.20.208.1:0"
    }
  },
  "tasks": [
    {
      "label": "Run Sketch",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "command": ".processing3/processing-java",
      "args": [
        "--force",
        "--sketch=${workspaceRoot}/examples/shadow",
        // "--sketch=${workspaceRoot}/examples/circle/",
        // "--sketch=${workspaceRoot}/examples/test/",
        "--output=${workspaceRoot}/output",
        "--platform=linux",
        "--run"
      ]
    }
  ]
}
